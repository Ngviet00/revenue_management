            <span class="@(isMenuItemUserActive ? "text-white" : "")">Người dùng</span>
        </a>
        <div id="collapseTwo" class="collapse @(isMenuItemUserActive ? "show" : "")" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
