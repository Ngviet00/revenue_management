<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Revenue Management">
    <meta name="author" content="viet_nv">
    <title>Revenue Management</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/font.css" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/font-awesome-4.7.css" rel="stylesheet">
    <link href="~/css/select2.min.css" rel="stylesheet" />
    @RenderSection("Style", required: false)
    <style>
        tbody tr td {
            vertical-align: middle;
        }
    </style>
</head>

<body id="page-top">
<div id="wrapper">
    @Html.Partial("Sidebar")
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            @Html.Partial("Navbar")
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        @Html.Partial("Footer")
    </div>
</div>

<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông báo?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Bạn có muốn đăng xuất không?</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                <form method="post" asp-controller="Auth" asp-action="Logout">
                    <input class="btn btn-danger text-white" type="submit" value="Đăng xuất"/>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="~/vendor/chart.js/Chart.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/js/demo/chart-area-demo.js"></script>
<script src="~/js/demo/chart-pie-demo.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/select2.min.js"></script>
@RenderSection("Script", required: false)

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".js-alert").remove();
        }, 3000);
    });
</script>
</body>
</html>