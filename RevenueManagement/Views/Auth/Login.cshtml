@{
    ViewBag.Title = "Login";
    Layout = "_AuthLayout";
}

@model RevenueManagement.Models.Requests.Auth.LoginRequest;

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Đăng nhập</h1>
                            </div>
                            <form class="user" method="post" asp-action="Login" asp-controller="Auth">
                                <div class="form-group mb-0">
                                    <input type="text" class="form-control form-control-user" asp-for="Username" placeholder="Nhập số điện thoại..." autofocus>
                                    <span class="text-danger pl-2 d-inline-block mb-1" style="font-size: 13px" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group mb-0">
                                    <input type="password" class="form-control form-control-user" asp-for="Password" placeholder="Mật khẩu">
                                    <span class="text-danger pl-2 d-inline-block mb-1" style="font-size: 13px" asp-validation-for="Password"></span>
                                    @if (ViewBag.ErrorMessage != null)
                                    {
                                        <span class="text-danger pl-2 d-inline-block mb-1" style="font-size: 13px" asp-validation-for="Password">
                                            @Html.Raw(ViewBag.ErrorMessage)
                                        </span>
                                    }
                                </div>
                                <input type="submit" value="Đăng nhập" class="btn btn-primary btn-user btn-block" />
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-controller="Auth" asp-action="ForgetPassword">Quên mật khẩu</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-controller="Auth" asp-action="Register">Tạo tài khoản</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

