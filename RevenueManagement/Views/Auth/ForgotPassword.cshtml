@{
    ViewBag.Title = "Forgot Password";
    Layout = "_AuthLayout";
}
<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group">
                                    <input type="text" name="phone" class="form-control form-control-user" placeholder="Nhập số điện thoại..." autofocus>
                                </div>
                                <input type="submit" value="Gửi" class="btn btn-primary btn-user btn-block" />
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-controller="Auth">Tạo tài khoản</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login" asp-controller="Auth">Bạn đã có tài khoản? Đăng nhập!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>